<%= form_with(model: todo, class: "contents") do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul class="list-disc ml-6">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="my-5">
    <%= form.label :name, class: "block font-medium mb-1" %>
    <%= form.text_field :name, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 #{'border-red-400' if todo.errors[:name].any?}" %>
  </div>

  <!-- Description -->
  <div class="my-5">
    <%= form.label :description, class: "block font-medium mb-1" %>
   <%= form.rich_text_area :description, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600" %>
  </div>

  <!-- Completed -->
  <div class="my-5">
    <%= form.label :completed, class: "block font-medium mb-1" %>
    <%= form.check_box :completed, class: "mr-2" %> 
  </div>

  <!-- Priority -->
  <div class="my-5">
    <%= form.label :priority, "Priority (1-5)", class: "block font-medium mb-1" %>
    <%= form.number_field :priority, in: 1..5, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 #{'border-red-400' if todo.errors[:priority].any?}" %>
  </div>


  <div class="mb-5">
  <%= form.label :project_id, "Proje Seç", class: "block text-sm font-medium text-gray-700 mb-1" %>
  <%= form.collection_select :project_id, Project.all, :id, :name, { prompt: "Proje seç" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
</div>

<!-- Submit Button -->
  <div class="my-5">
    <%= form.submit "Kaydet", class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-500 text-white font-medium px-4 py-2 rounded-md" %>
  </div>

  
<% end %>
